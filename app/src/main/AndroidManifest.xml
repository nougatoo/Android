<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.brandon.learning" >

    <uses-sdk android:minSdkVersion="11" />

    <android:uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <android:uses-permission android:name="android.permission.READ_PHONE_STATE" />
    <android:uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name=".MainActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".DisplayMessageAcivity"
            android:label="@string/title_activity_display_message_acivity"
            android:parentActivityName=".MainActivity" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.example.brandon.learning.MainActivity" />
        </activity>
        <activity
            android:name=".SettingsActivity"
            android:label="@string/title_activity_settings"
            android:parentActivityName=".MainActivity" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.example.brandon.learning.MainActivity" />
        </activity>
        <activity
            android:name=".RandomActivity"
            android:label="@string/title_activity_random"
            android:parentActivityName=".MainActivity" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.example.brandon.learning.MainActivity" />
        </activity>
        <activity
            android:name=".GridTesterActivity"
            android:label="@string/title_activity_grid_tester"
            android:parentActivityName=".MainActivity" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.example.brandon.learning.MainActivity" />
        </activity>
        <activity
            android:name=".CreateWorkoutActivity"
            android:label="@string/title_activity_create_workout"
            android:parentActivityName=".MainActivity" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.example.brandon.learning.MainActivity" />
        </activity>
        <activity
            android:name=".CreateDayActivity"
            android:label="@string/title_activity_create_day"
            android:parentActivityName=".CreateWorkoutActivity" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.example.brandon.learning.CreateWorkoutActivity" />
        </activity>
    </application>

</manifest>
